<template xmlns="http://ws.apache.org/ns/synapse" name="getCombinedMemberPreferences">	
<parameter name="member_id" description="a String containing the member id" />
	<sequence>
		<property name="Accept-Encoding" action="remove" scope="transport" />
			<payloadFactory media-type="xml">
			<format>
				<soapenv:Envelope xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/">
					<soapenv:Header />
					<soapenv:Body>
                                        <getCombinedMemberPreferences>
                                        <member_id>$1</member_id>
                                        </getCombinedMemberPreferences>
                                        </soapenv:Body>
				</soapenv:Envelope>
			</format>
			<args>
                              <arg evaluator="xml" expression="$func:member_id"/>         
                        </args>
		</payloadFactory>
		
		<property name="messageType" value="application/json" scope="axis2" />
                <property name="uri.var.member_id" expression="$func:member_id" />
                <property name="HTTP_METHOD" value="GET" scope="axis2" type="STRING"/>
             <property name="serviceURL" expression="fn:concat($ctx:uri.var.mailman.url,'/3.0/members/',$ctx:uri.var.member_id,'/all/preferences')"/>
                <class name="org.wso2.esb.mediators.MailmanMediator">                          
                </class>
		
	</sequence>

